{% extends 'base.html.twig' %}

{% block title %}Nos suites
{% endblock %}

{% block body %}

{{ include('navbar.html.twig') }}

<div class="col-hotel">
	<div class="container-xxl">
		<div class="py-5 container_header">
			<div class="img_show_hotel">
				<img src="{{asset('img/hotel_lux2.jpeg')}}" class="Image montrant l'hotel">
			</div>
			<div>
				<h1>{{ etablissement.name }}
				</h1>
			</div</div>
			<div class="d-flex flex-column my-5">
				<h2 class="h3 text-center">{{ etablissement.address }}
				</h2>
				<div class="text-center">{{ etablissement.description }}
				</div>


			</div>
			<div>
				<h2 class="h2 text-center my-5">
					Nos suites
				</h2>
			</div>
			<div class="my-5">
				{% for suite in suites %}
					<div class="row my-5">
						<div class="col-lg-6">
							<div class="container_content">
								<img src="{{asset('/images/suite/' ~ suite.featuredimage )}}" alt="Photo de la suite" class="">
							</div>
						</div>
						<div class="col-lg-6 d-flex flex-column justify-content-around ">
							<div class="title_content_card_suite">
								<h3 class="h4 text-start">
									{{suite.title}}
								</h3>
							</div>
							<div class="description_content_card_suite">
								<p>{{suite.description}}
								</p>
							</div>
							<div class="d-flex flex-column flex-md-row justify-content-between align-items-center footer_card_suite">
								<a href="{{path('app_suite_show',{'id': suite.suiid})}}">Découvrir
									<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24" width="16" height="16"><path fill="none" d="M0 0h24v24H0z"/><path d="M16.172 11l-5.364-5.364 1.414-1.414L20 12l-7.778 7.778-1.414-1.414L16.172 13H4v-2z" fill="rgba(204,173,0,1)"/></svg>
								</a>
								<a class="btn btn-primary" href="{{path('app_reservation_new_r',{'id': suite.suiid})}}">Réserver
								</a>
								<div>
									<p>{{suite.price}}
										€</p>
									<p>La nuit
									</p>
								</div>

							</div>

						</div>

					</div>
				{% endfor %}
			</div>

			{% if (is_granted('ROLE_ADMIN'))  %}
				<div class="d-flex justify-content-center my-2">
					<a class="btn btn-secondary" href="{{ path('app_admin_hotel') }}">Retour</a>
				</div>


			{% endif %}
		</div>
	</div>
{% endblock %}